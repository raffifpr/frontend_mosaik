                    <ListView x:Name ="lstView" IsVisible="true" IsGroupingEnabled="true" GroupDisplayBinding="{Binding Date}" ItemTapped="History_ItemTapped">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding Link}" Detail = "{Binding AccessedTime}"
                                          TextColor="#f35e20"                           
                                          DetailColor="#503026" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
